{# templates/back-office/adminlayout.html.twig #}

{% extends "baselayout.html.twig" %}

{% block menu %}
    <li><a href="/admin/circuit"> Tours Administration </a></li>
    <li><a href="/admin/programmation">Programmation Administration </a></li>
    <li><a href="/"> User View </a></li>
{% endblock %}


{% block main %}
	{# Display messages resulting from redirects after C(R)UD actions #}
    {% for message in app.session.flashbag.get('message') %}
        <div class="alert alert-info alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert">
                <span aria-hidden="true">&times;</span>
                <span class="sr-only">Close</span>
            </button>
            <p>{{ message }}</p>
        </div>
    {% endfor %}

{% endblock %}{# menu #}

{% block footer %}
{% endblock %}
