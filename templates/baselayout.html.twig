{# templates/baselayout.html.twig #}
<!DOCTYPE HTML>
<html>
  <head>
    <meta charset="utf-8">
    <title>{% block title %} Travel Agency {% endblock %}</title>
        <!-- Bootstrap -->
            <!-- Minimal theme -->
            <link rel="stylesheet" href="{{ asset('vendor/twbs/bootstrap/dist/css/bootstrap.min.css') }}">
            <!-- Optionnal Theme -->
            {% block stylesheet %}
            {% endblock %}
  </head>

  <body>
    <header>
        <div class='navbar-header'>
            <a href="/" class='navbar-brand'> INT TRAVEL </a>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
              <li> <a href=/ > Welcome </a> </li>
              <li> <a href=/circuit > All tours </a> </li>
              <li> <a href=/programmation > Programmed Tours </a> </li>
              <li> <a href=/sign-in> Sign In </a> </li>
              <li> <a href=/sign-up> Sign Up </a> </li>
          </ul>
        </div>
    </header>
    {% block body %}
       	{% block javascripts %}
	        <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
	        <script src="{{ asset('vendor/components/jquery/jquery.min.js') }}"></script>
	        <script src="{{ asset('vendor/twbs/bootstrap/dist/js/bootstrap.min.js') }}"></script>
	    {% endblock %}
	{% block custompage_script %}{% endblock %}

    {% endblock %}
    <footer>
        <section id='contact'>
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                <div class="row text-center header"> <a href=/contacts > <h3> Contacts </h3> </a> </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                <div class="row text-center header"> <a href=/legal > <h3> Legal Notices </h3> </a> </div>
            </div>
        </section>
    </footer>
  </body>

</html>
